PORT=3000
NODE_ENV=production

# MySQL Database Configuration (Use your production database)
DB_HOST=your-db-host.com
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=your_production_db
DB_PORT=3306

# Frontend URL for CORS (comma-separated for multiple origins)
# IMPORTANT: Must use HTTPS in production
FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com

# JWT Secret for authentication (GENERATE A STRONG SECRET!)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
